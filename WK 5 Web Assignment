// script.js

// ==========================
// Part 1: Variables & Conditionals
// ==========================
let userName = "";
let currentYear = new Date().getFullYear();

function isAdult(age) {
  if (age >= 18) {
    console.log("User is an adult.");
    return true;
  } else {
    console.log("User is a minor.");
    return false;
  }
}

// ==========================
// Part 2: Custom Functions
// ==========================
function greetUser() {
  userName = document.getElementById("nameInput").value;
  if (userName) {
    alert(`Hello, ${userName}!`);
  } else {
    alert("Please enter your name.");
  }
}

function calculateAge() {
  const birthYear = parseInt(document.getElementById("birthYear").value);
  if (!isNaN(birthYear)) {
    const age = currentYear - birthYear;
    alert(`You are ${age} years old.`);
    isAdult(age); // Call conditional function
  } else {
    alert("Please enter a valid year.");
  }
}

// ==========================
// Part 3: Loops
// ==========================
const favoriteColors = ["Blue", "Green", "Red", "Yellow", "Purple"];

function displayColors() {
  const list = document.getElementById("colorList");
  list.innerHTML = ""; // Clear previous list

  // Loop #1: For loop
  for (let i = 0; i < favoriteColors.length; i++) {
    const li = document.createElement("li");
    li.textContent = favoriteColors[i];
    list.appendChild(li);
  }

  // Loop #2: forEach loop
  console.log("Logging colors:");
  favoriteColors.forEach(color => console.log(color));
}

// ==========================
// Part 4: DOM Interactions
// ==========================
// 1. Get input value from DOM (nameInput, birthYear)
// 2. Modify DOM content (colorList)
// 3. Trigger DOM events (onclick on buttons)
